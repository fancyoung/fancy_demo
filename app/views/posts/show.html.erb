<% title "Post" %>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
  (by: <%= @post.creater ? @post.creater.name : '-' %>)
</p>
<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<h2>Comments</h2>
<ul>
<%= render @post.comments %>
</ul>

<h2>Add a comment</h2>
<%= render 'comments/form' %>

